<Page x:Class="GYMRecordApp.Views.WorkSpace"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GYMRecordApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024" 
      Title="WorkSpace" Background="#FF0B445F">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <GridSplitter Width="5" Height="Auto" Grid.Column="1" Grid.RowSpan="3" Background="#FF072432" VerticalAlignment="Stretch" HorizontalAlignment="Left"/>
        <GridSplitter Height="5" Width="Auto" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.ColumnSpan="1" Grid.Row="1" Margin="0,18,0,0" Background="#FF072432"/>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Background="#FF41444F" Width="Auto" Height="25" VerticalAlignment="Stretch">
            <ToolBarTray Width="Auto" Height="25" >
                <ToolBar Height="25">

                </ToolBar>
            </ToolBarTray>
        </StackPanel>
        <StackPanel Grid.Row="1" Background="BlueViolet"> </StackPanel>
        <StackPanel Grid.Row="2" Background="Brown"></StackPanel>
        <StackPanel Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Background="Aquamarine"></StackPanel>
    </Grid>
</Page>
